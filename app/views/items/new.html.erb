<h1> New Item </h1>

<% if @item && @item.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@item.errors.count, "error") %> prohibited
      this item from being saved:
    </h2>
    <ul>
      <% @item.errors.full_messages.each do |msg| %>
	<li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with scope: :item, url: items_path, local: true do |form| %>

  <div class="field">
    <%= form.label :description %><br>
    <%= form.text_area :description, class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :url %><br>
    <%= form.text_field :url, class: 'form-control', placeholder: 'http://www.example.com' %>
  </div>

  <br>
  <input type="hidden" id="list_id" name="item[list_id]" value=<%= @list_id %> />
  <div class="actions">
    <%= form.submit "Create", class: "btn btn-primary" %>
  </div>
<% end %>
